<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jakemager.tictactoe.MainActivity"
    android:id="@+id/constraintLayout"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@android:color/white">


    <Button
        android:id="@+id/button0"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button1"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button0"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button2"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="16dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="16dp"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button3"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="43sp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button0"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button0"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button4"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        app:layout_constraintHorizontal_bias="1.0"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button5"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button6"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button3"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button7"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button4"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/button8"
        android:background="@android:color/white"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="43sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button5"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.0"
        style="?android:attr/borderlessButtonStyle"
        />

    <TextView android:id="@+id/winnerText"
        android:fontFamily="sans-serif"
        android:textSize="43sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="192dp"
        android:layout_marginTop="35dp"
        app:layout_constraintCenterX_toCenterX="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        />

    <Button android:id="@+id/newGameButton"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="New Game"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="142dp"
        app:layout_constraintCenterX_toCenterX="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/winnerText"
        android:layout_marginTop="23dp"
        />

    <View
        android:layout_width="345dp"
        android:layout_height="5dp"
        android:layout_gravity="top"
        android:background="@android:color/black"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteY="236dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintCenterX_toCenterX="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        />

    <View
        android:layout_width="345dp"
        android:layout_height="5dp"
        android:layout_gravity="top"
        android:background="@android:color/black"
        android:layout_marginTop="3dp"
        tools:layout_editor_absoluteY="116dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintCenterX_toCenterX="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        />

    <View
        android:layout_width="5dp"
        android:layout_height="345dp"
        android:background="@android:color/black"
        android:layout_gravity="top"
        tools:layout_editor_absoluteY="6dp"
        tools:layout_editor_absoluteX="125dp"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintRight_toLeftOf="@id/button1"
        android:layout_marginRight="10dp"
        />

    <View
        android:layout_width="5dp"
        android:layout_height="345dp"
        android:layout_gravity="top"
        android:background="@android:color/black"
        tools:layout_editor_absoluteY="6dp"
        tools:layout_editor_absoluteX="254dp"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintRight_toLeftOf="@id/button2"
        android:layout_marginRight="10dp"
        />

</android.support.constraint.ConstraintLayout>

